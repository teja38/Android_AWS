<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ui.slideshow.SlideshowFragment">


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            app:columnCount="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="5">

            <Button
                android:id="@+id/room1_wall_light"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/room1walllightimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/roof_light"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <Button
                android:id="@+id/room1_dim_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/room1lightimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/light2_on"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <Button
                android:id="@+id/room1_fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/room1fanimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fan_off"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <Button
                android:id="@+id/room1_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/room1acimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ac_off"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <Button
                android:id="@+id/room1_socket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/room1socketimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/socket_3"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />
            <Button
                android:id="@+id/bathroom1_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/bathroom1_light_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bathroomlightoff"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />
            <Button
                android:id="@+id/bathroom1_geyser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:tag="OFF"
                android:text="OFF"
                android:textSize="18sp"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

            <ImageView
                android:id="@+id/bathroom1_geyser_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heateroff"
                app:layout_columnWeight="0.25"
                app:layout_gravity="fill"
                app:layout_rowWeight="0.25" />

        </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>